<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_20sdp"
    android:background="#bebebe"
    tools:context=".ui.LoginActivity2">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/_30sdp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Welcome to WhatsApp"
        android:textColor="#75E555"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="@string/phone_number"
        app:layout_constraintTop_toBottomOf="@id/text1"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Phone_num"
        android:text="@string/send_code"
        android:backgroundTint="#75E5"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/code1_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:hint="Code"
        app:layout_constraintTop_toBottomOf="@id/login"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/verify1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:backgroundTint="#75E5"
        android:text="verify"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/code1_txt"/>


</androidx.constraintlayout.widget.ConstraintLayout>